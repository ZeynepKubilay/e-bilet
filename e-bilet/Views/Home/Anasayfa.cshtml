@model e_bilet.Models.tblKisi
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="style.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Anasayfa</title>
</head>
<body>
    <div>
        <nav class="navbar navbar-light bg-light">
            <form class="form-inline justify-content-end">
                <div style="background-color: lightblue; padding: 4px; margin: 4px">
                    @Html.ActionLink("Çıkış Yap", "Logout", "Login")
                </div>
                <div style="background-color: lightcoral; padding: 4px; margin: 4px">
                    @Html.ActionLink("Giriş Yap", "Index", "Login")
                </div>
                <div style="background-color: lawngreen; padding: 4px; margin: 4px">
                    @Html.ActionLink("Üye Ol", "Index", "Register")
                </div>
            </form>
        </nav>
    </div>

        <header>
            <div>
                <h1>
                        Welcome @User.Identity.Name
                </h1>
            </div>
        <h1>E-Bilet Satış Noktası</h1>
        <nav>
            <ul>
                <li><a href="/Home/Anasayfa">Ana Sayfa</a></li>
                <li><a href="/Hakkımızda">Hakkımızda</a></li>
                <li><a href="/Hizmetler">Hizmetler</a></li>
                <li><a href="/İletişim">İletişim</a></li>
            </ul>
        </nav>
    </header>

        <main>
            

            <section class="middle-section">

                <p>Aradığınız Tüm Biletler Burada</p>
            </section>

            <div class="container">
                <div class="row">
                    <div class="col-3">
                        <div class="card-body">
                            <div class="card-title">KONSER ETKİNLİKLERİ</div>
                            <a href="/Bilets/index">
                                <img src="~/Content/img/konser.jpg" width="250" height="200" alt="konser fotosu" />
                            </a>
                        </div>
                    </div>



                    <div class="col-3">
                        <div class="card-body">
                            <div class="card-title">BALE ETKİNLİKLERİ</div>
                            <a href="/Bilets/index">
                                <img src="~/Content/img/balerin.jpg" width="250" height="200" alt="konser fotosu" />
                                </a>

                        </div>
                    </div>



                    <div class="col-3">
                        <div class="card-body">
                            <div class="card-title">SİNEMA ETKİNLİKLERİ</div>
                            <a href="/Bilets/index">
                                <img src="~/Content/img/popcorn.jpg" width="200" height="200" alt="konser fotosu" />
                                </a>

                        </div>
                    </div>


                    <div class="col-3">
                        <div class="card-body">
                            <div class="card-title">TİYATRO ETKİNLİKLERİ</div>
                            <a href="/Bilets/index">
                                <img src="~/Content/img/tiyatyo.jpg" width="250" height="200" alt="konser fotosu" />
                                </a>

                        </div>
                    </div>
                </div>
     
              </div>
</main>

    <footer>
        <p>&copy; 2023 Web Siteniz. Tüm hakları saklıdır.</p>
    </footer>

</body>
</html>

<style>
    img:hover {
        -ms-transform: scale(1.3); /* IE 9 */
        -webkit-transform: scale(1.3); /* Safari 3-8 */
        transform: scale(1.3);
    }
    
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        
    }

    header {
        background-color: #333;
        color: white;
        padding: 1em;
        text-align: center;
    }

    nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    nav li {
        display: inline;
        margin-right: 10px;
    }

    nav a {
        text-decoration: none;
        color: white;
    }

    main {
        padding: 20px;
       
    }

    .middle-section {
        background-image: url("img\balerin.jpg"); 
        text-align: center;
    }

    footer {
        background-color: #333;
        color: white;
        text-align: center;
        padding: 1em;
        position: fixed;
        bottom: 0;
        width: 100%;
    }
</style>